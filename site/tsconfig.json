{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "rootReducer": ["app/rootReducer.ts"],
      "dot-matrix": ["../dot-matrix/index.ts"]
    }
  },
  "include": ["./app/**/*", "./webpack.config.*"],
  "exclude": ["node_modules", "dist", "lib"]
}
